<div class ="col-md-11">
  <h3>注文情報確認</h3>

  <table class ="table">
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
    <tr>
      <% @cart_items.each do |cart_item| %>
        <td><%= img_tag cart_item.item_image %><%= cart_item.item.name %></td>
        <td><%= cart_item.item.with_tax_price %></td>
        <td><%= cart_item.amount %></td>
        <td><%= cart_item.subtotal %></td>
    </tr>
  </table>
  <table class ="table">
    <tr class ="row">
      <th>送料</th>
      <td><%= @shipping_cost %></td>
    </tr>
    <tr class ="row">
      <th>商品小計</th>
      <td><%= @total_cart_price %></td>
    </tr>
    <tr class ="row">
      <th>請求金額</th>
      <td><%= @total_payment %></td>
    </tr>
  </table> 
  <table class ="table-borderless">
    <tr class ="row">
      <th>支払方法</th>
      <td><%= @payment_method %></td>
    </tr>
    <tr class ="row">
      <th>お届け先</th>
      <td><%= @address %></td>
    </tr>
  </table>
  <div class ="justify-content-center">
    <%= link_to orders_path,method: :post,class: "btn btn-success" %>
  </div>
</div>