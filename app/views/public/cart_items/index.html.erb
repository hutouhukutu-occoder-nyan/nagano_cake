<div class ="container">
  <div class="row>
    <div class ="col-md-10 justify-content-center">
      <div class = "d-flex justify-content-between mb-3 p-10">
        <h3>ショッピングカート</h3>
        <%= link_to "カートを空にする", all_delete_cart_items_path, method: :delete, class:"btn btn-danger" %>
      </div>

      <div class="table-responsive">
        <table class ="table">
          <thead>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </thead>
          <tbody>
            <% @cart_items.each do|cart_item| %>
              <tr>
                <td>
                  <%= image_tag cart_item.item.item_image, width:"100", class:"img-fluid" %>
                  <%= cart_item.item.name %>
                </td>
                <td><%= cart_item.item.with_tax_price %></td>
                <td class ="row">
                  <%= form_with model: cart_item,url:cart_item_path(cart_item.id), method: :patch, local:true ,class: "d-flex align-items-center" do |f| %> 
                  <%= f.number_field :amount, min: 1, selected: cart_item.amount,class: "form-control form-control-sm" %>
                  <%= f.submit "変更", class: "btn btn-success btn-sm" %>
                  <% end %>
                </td>
                <td><%= cart_item.subtotal %></td>
                <td><%= link_to "削除する" ,cart_item_path(cart_item.id),method: :delete, class: "btn btn-danger btn-sm" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class ="d-flex justify-content-between mt-3">
        <div>
          <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
        </div>
        <table class ="table col=2">
          <tr>
            <th>合計金額</th>
            <td>
              <%= @sum.to_s(:delimited) %>
            </td>
          </tr>
        </table>
      </div>
      <% if @cart_items.present? %>
        <div class ="text-center">
          <%= link_to "情報入力に進む" ,new_order_path, class: "btn btn-success" %>
        </div>
      <% else %>
        <% end %>
    </div>
  </div>
</div>