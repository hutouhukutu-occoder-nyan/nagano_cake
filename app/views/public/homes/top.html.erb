<div class="container">
  <div class="row my-3">
    <div class="col-3">
      <%= render 'public/items/search_genre', genres: @genres %>
    </div>

    <div class="col-8 offset-1">

      <div>
        <div class="card bg-dark text-white position-relative">
          <%= image_tag 'cookies.jpg', class: "card-img img-fluid" %>
          <div class="card-img-overlay d-flex position-absolute top-0 start-0 p-3" style=" padding: 5px 10px;">
            <p class="text-center " style=" color: rgb(102, 60, 18); background-color: rgba(255, 255, 255, 0.5);">
              ようこそ、ながのCAKEへ!<br>
              このサイトは、ケーキ販売のECサイトになります。<br>
              会員ではない方も商品の閲覧はできますが、<br>
              購入には会員登録が必要になります。
            </p>
          </div>
        </div>
      </div>
      
      <div class="row mt-4">
        <p class="mx-auto h4 border-bottom border-dark">新着商品</p>
      </div>

      <div class="row">
        <% @item_latest4.each do |item| %>
          <div class="col-3 text-center">
            <%= link_to item_path(item), class: "text-decoration-none" do %>
              <div class="embed-responsive embed-responsive-1by1">
                <%= image_tag item.item_image, class: "img-fluid embed-responsive-item" %>
              </div>
              <p class="text-dark mb-0 text-truncate"><%= item.name %></p>
            <% end %>
            <p class="text-truncate">￥<%= number_with_delimiter(item.with_tax_price) %></p>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>
