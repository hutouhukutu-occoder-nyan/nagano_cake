<div class="container">
  
  <div class="row my-3">
    <%= render 'layouts/errors', obj: @address %>
  </div>

  <div class="row my-3">
    <h1>配送先登録/一覧</h1>
  </div>

  <div class="row my-3">
    <%= form_with model: @address, url: addresses_path, class: "mx-auto" do |f| %>

      <div class="form-group row my-3">
        <%= f.label :"郵便番号(ハイフンなし)", class: "col-6 control-label", placeholder: "0000000" %>
        <div class="col-6">
          <%= f.text_field :postal_code %>
        </div>
      </div>

      <div class="form-group row my-3">
        <%= f.label :住所, class: "col-6 control-label", placeholder: "東京都渋谷区代々木神園町0-0" %>
        <div class="col-6">
          <%= f.text_field :address %>
        </div>
      </div>

        
      <div class="form-group row my-3">
        <%= f.label :宛名, class: "col-6 control-label", placeholder: "令和道子" %>
        <div class="col-6">
          <%= f.text_field :name %>
        </div>
      </div>

      <div class="text-center">
        <%= f.submit "新規登録", class: "btn btn-primary" %>
      </div>

    <% end %>
  </div>

<div class="row my-5">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>氏名</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td>
            <%= link_to "編集する", edit_address_path(address), class: "btn btn-success" %>
            <%= link_to "削除する", address_path(address), method: :delete, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
