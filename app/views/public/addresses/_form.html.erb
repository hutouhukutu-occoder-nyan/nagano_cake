<%= form_with model: address, class: "mx-auto" do |f| %>

  <div class="form-group row my-3">
    <%= f.label :"郵便番号(ハイフンなし)", class: "col-6 control-label"%>
    <div class="col-6">
      <%= f.text_field :postal_code, placeholder: "0000000"  %>
    </div>
  </div>

  <div class="form-group row my-3">
    <%= f.label :住所, class: "col-6 control-label" %>
    <div class="col-6">
      <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %>
    </div>
  </div>

    
  <div class="form-group row my-3">
    <%= f.label :宛名, class: "col-6 control-label" %>
    <div class="col-6">
      <%= f.text_field :name, placeholder: "令和道子" %>
    </div>
  </div>

  <div class="text-center">
    <%= f.submit submit_text, class: "btn btn-primary" %>
  </div>

<% end %>