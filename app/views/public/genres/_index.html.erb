<div class="container mt-4">
  <table class="table table-bordered">
    <thead class="table-light">
      <tr>
        <th class="text-center">ジャンル</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td class="text-center border-bottom" colspan="1">
          <ul class="list-unstyled">
            <% genres.each do |genre| %>
              <li class="py-2">
                <%= link_to genre.name, genre_path(genre), class: "text-decoration-none text-dark" %>
              </li>
            <% end %>
          </ul>
        </td>
      </tr>
    </tbody>
  </table>
</div>

