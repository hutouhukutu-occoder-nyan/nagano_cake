<div class='container-flied'>
  <div class='row my-3 mx-5'>
    <div class="col-2">
      <h3>登録情報</h3>
    </div>
    <div class="col-2">
      <%= link_to '編集する', edit_customer_path(@user), class: "btn btn-success w-100" %>
    </div>
  </div>
  <div class="row mx-5">
    <div class="col-7">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th scope="row" class="text-nowrap w-25">氏名</th>
            <td><%= @user.last_name %> <%= @user.first_name %></td>
          </tr>
          <tr>
            <th scope="row" class="text-nowrap w-25">カナ</th>
            <td><%= @user.last_name_kana %> <%= @user.first_name_kana %></td>
          </tr>
          <tr>
            <th scope="row" class="text-nowrap w-25">郵便番号</th>
            <td><%= @user.postal_code %></td>
          </tr>
          <tr>
            <th scope="row" class="text-nowrap w-25">住所</th>
            <td><%= @user.address %></td>
          </tr>
          <tr>
            <th scope="row" class="text-nowrap w-25">電話番号</th>
            <td><%= @user.telephone_number %></td>
          </tr>
          <tr>
            <th scope="row" class="text-nowrap w-25">メールアドレス</th>
            <td><%= @user.email %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class='row my-3 mx-5'>
    <div class="col-2">
      <h4>配送先</h4>
    </div>
    <div class="col-2">
      <%= link_to '一覧を見る', '/addresses', class: "btn btn-primary w-100" %>
    </div>
  </div>
  <div class='row my-3 mx-5'>
    <div class="col-2">
      <h4>注文履歴</h4>
    </div>
    <div class="col-2">
      <%= link_to '一覧を見る', '/orders', class: "btn btn-primary w-100" %>
    </div>
  </div>
</div>