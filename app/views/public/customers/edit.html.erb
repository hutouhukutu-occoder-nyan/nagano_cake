<div class="container">
  <div class="row m-4">
    <div class="col">
      <h2>会員情報編集</h2>
    </div>
  </div>

  <%= form_with model:@user, url: update_customer_path, local: true do |f| %>
  <div class="row mb-3">
    <div class="col-3">
      <%= f.label :名前 %>
    </div>
    <div class="col-3">
      <%= f.text_field :last_name, class: 'form-control' %>
    </div>
    <div class="col-3">
      <%= f.text_field :first_name, class: 'form-control' %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-3">
      <%= f.label :フリガナ %>
    </div>
    <div class="col-3">
      <%= f.text_field :last_name_kana, class: 'form-control' %>
    </div>
    <div class="col-3">
      <%= f.text_field :first_name_kana, class: 'form-control' %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-3">
      <%= f.label :郵便番号 %>
    </div>
    <div class="col-3">
      <%= f.text_field :postal_code, class: 'form-control' %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-3">
      <%= f.label :住所 %>
    </div>
    <div class="col-6">
      <%= f.text_field :address, class: 'form-control' %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-3">
      <%= f.label :電話番号 %>
    </div>
    <div class="col-3">
      <%= f.text_field :telephone_number, class: 'form-control' %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-3">
      <%= f.label :メールアドレス %>
    </div>
    <div class="col-3">
      <%= f.text_field :email, class: 'form-control' %>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-4 offset-3">
      <%= f.submit :編集内容を保存, class: 'btn btn-success w-100' %>
    </div>
    <div class="col-2 offset-1">
      <%= link_to "退会する", unsubscribe_customer_path, class: 'btn btn-danger' %>
    </div>
  </div>

  <% end %>
  
</div>