<div class="container">
  <div class="row">
    <div class="col">
      <h2>会員情報編集</h2>
    </div>
  </div>

  <% form_with model:customer, local: true do |f| %>
  <div class="row">
    <div class="col-3">
      <%= f.label :名前 %>
    </div>
    <div class="col-3">
      <%= f.text_field :last_name, class: 'form-control' %>
    </div>
    <div class="col-3">
      <%= f.text_field :first_name, class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <%= f.label :フリガナ %>
    </div>
    <div class="col-3">
      <%= f.text_field :last_name_kana, class: 'form-control' %>
    </div>
    <div class="col-3">
      <%= f.text_field :first_name_kana, class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <%= f.label :郵便番号 %>
    </div>
    <div class="col-3">
      <%= f.text_field :postal_code, class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <%= f.label :住所 %>
    </div>
    <div class="col-6">
      <%= f.text_field :address, class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <%= f.label :電話番号 %>
    </div>
    <div class="col-3">
      <%= f.text_field :telephone_number, class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <%= f.label :メールアドレス %>
    </div>
    <div class="col-3">
      <%= f.text_field :email, class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="col-3 offset-3">
      <%= f.submit :編集内容を保存, class: 'btn btn-success' %>
    </div>
    <div class="col-2 offset-1">
    <%# 退会確認画面への遷移 %>
      <%= link_to "退会する", unsubscribe_customer_path, class: 'btn btn-danger' %>
    </div>
  </div>

  <% end %>
  
</div>