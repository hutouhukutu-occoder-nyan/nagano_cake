<header>
  <div class="container">
    <div class="row align-items-center">
      <div class="col-3">
        <h1 class="logo">
          長野Cake
        </h1>
      </div>
    </div>

    # ログインしている状態とpublicログイン状態とadminログイン状態で表示を変える
    <div class="col-9">
      <div class="row justify-content-end">
        <nav class="col-12">
          <ul class="nav justify-content-end">
            <% if admin_signed_in? %>
              <%= link_to "商品一覧", admin_items_path class: "btn" %>
              <%= link_to "会員一覧", admin_customers_path class: "btn" %>
              <%= link_to "注文履歴一覧", admin_path class: "btn" %>
              <%= link_to "ジャンル一覧", admin_genres_path class: "btn" %>
              <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn" %>
            <% elsif customer_signed_in? %>
              <%= link_to "マイページ", customer_path class: "btn" %>
              <%= link_to "商品一覧", items_path class: "btn" %>
              <%= link_to "カート", cart_items_path class: "btn" %>
              <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "btn" %>
            <% else %>
              <%= link_to "About", about_path class: "btn" %>
              <%= link_to "商品一覧", items_path class: "btn" %>
              <%= link_to "新規登録", new_customer_registration_path class: "btn" %>
              <%= link_to "ログイン", new_customer_session_path class: "btn" %>
            <% end %>
          </ul>
        </nav>
      </div>
      <div class="row justify-content-end mt-2">
        <div class="col-12 col-md-6">

        </div>
      </div>
    </div>
  </div>
</header>