<header>
  <div class="container-fluid bg-info">
    <div class="row">
      <div class="col-3 d-flex justify-content-center align-items-center">
        <%= link_to root_path do %>
          <%= image_tag 'ECサイト.png', alt: '長野Cake', class: 'img-fluid' %>
        <% end %>
      </div>

      <div class="col-9">
        <div class="row justify-content-end">
          <nav class="col-12">
            <ul class="nav justify-content-end">
              <% if admin_signed_in? %>
                <%= link_to "商品一覧", admin_items_path, class: "btn btn-outline-dark m-3" %>
                <%= link_to "会員一覧", admin_customers_path, class: "btn btn-outline-dark m-3" %>
                <%= link_to "注文履歴一覧", admin_path, class: "btn btn-outline-dark m-3" %>
                <%= link_to "ジャンル一覧", admin_genres_path, class: "btn btn-outline-dark m-3" %>
                <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-outline-dark m-3" %>
              <% elsif customer_signed_in? %>
                <%= link_to "マイページ", customer_path, class: "btn btn-outline-dark m-3" %>
                <%= link_to "商品一覧", items_path, class: "btn btn-outline-dark m-3" %>
                <%= link_to "カート", cart_items_path, class: "btn btn-outline-dark m-3" %>
                <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "btn btn-outline-dark m-3" %>
              <% else %>
                <%= link_to "About", about_path, class: "btn btn-outline-dark m-3" %>
                <%= link_to "商品一覧", items_path, class: "btn btn-outline-dark m-3" %>
                <%= link_to "新規登録", new_customer_registration_path, class: "btn btn-outline-dark m-3" %>
                <%= link_to "ログイン", new_customer_session_path, class: "btn btn-outline-dark m-3" %>
              <% end %>
            </ul>
          </nav>
        </div>
        <div class="row justify-content-end">
          <div class="col-6 mb-3">
            <% if admin_signed_in? %>
              <%= form_with url: admin_searches_path, method: :get, local: true, class: 'input-group' do %>
                <%= text_field_tag :query, @query, class: 'form-control', placeholder: '商品名で検索' %>
                <%= button_tag type: 'submit', class: 'btn btn-primary' do %>
                  <i class="bi bi-search"></i>
                <% end %>
              <% end %>
            <% elsif customer_signed_in? %>
              <%= form_with url: public_search_path, method: :get, local: true, class: 'input-group' do %>
                <%= text_field_tag :query, @query, class: 'form-control', placeholder: '商品名で検索' %>
                <%= button_tag type: 'submit', class: 'btn btn-primary' do %>
                  <i class="bi bi-search"></i>
                <% end %>
              <% end %>
            <% else %>
              <%= form_with url: public_search_path, method: :get, local: true, class: 'input-group' do %>
                <%= text_field_tag :query, @query, class: 'form-control', placeholder: '商品名で検索' %>
                <%= button_tag type: 'submit', class: 'btn btn-primary' do %>
                  <i class="bi bi-search"></i>
                <% end %>
              <% end %>
            <% end %>
          </div>
        </div>

      </div>
    </div>
  </div>
</header>