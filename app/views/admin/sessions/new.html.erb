<div class="container">
  <div class="row m-4">
    <h2 class="bg-light">管理者ログイン</h2>
  </div>
  <div class="row justify-content-center">
    <div class="col-8">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row mb-3">
          <div class="col-3">
            <%= f.label :メールアドレス %>
          </div>
          <div class="col-9">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-3">
            <%= f.label :パスワード %>
          </div>
          <div class="col-9">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions text-center mt-3">
          <%= f.submit "ログイン", class: "btn btn-primary w-25" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render "admin/shared/links" %>
