<div class="container">
  <div class="row">
    <div class="col">
      <div class="row my-4">
        <h2>商品詳細</h2>
      </div>
      
      <div class="row">
        <div class="col-4">
          <div class="embed-responsive embed-responsive-1by1">
            <%= image_tag @item.item_image, class: "embed-responsive-item" %>
          </div>
        </div>
      
        <div class="col-8 my-auto">
          <table class="table">
            <tr>
              <th>商品名</th>
              <th><%= @item.name %></th>
            </tr>
            <tr>
              <th>商品説明</th>
              <th><%= @item.introduction %></th>
            </tr>
            <tr>
              <th>ジャンル</th>
              <th><%= @item.genre.name %></th>
            </tr>
            <tr>
              <th>税込み価格<br>(税抜価格)</th>
              <th>￥<%= number_with_delimiter(@item.with_tax_price) %><br>(￥<%= number_with_delimiter(@item.price) %>)</th>
            </tr>
            <tr>
              <th>販売ステータス</th>
              <th><%= content_tag(:strong, @item.is_active ? '販売中' : '販売停止中', class: item_status(@item)) %></th>
            </tr>
          </table>
      
          <div>
            <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>